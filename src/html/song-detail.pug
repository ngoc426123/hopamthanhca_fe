extends _layout/_layout

block main-content
  .main-content
    .wrapper
      .box.padding.detail
        .box-title
          h1 Ca vang tình yêu Chúa
          .song-share
            ul
              li
                a.fac.share-facebook(href='javascript:void(0)')
                  i.fab.fa-facebook
              li
                a.goo(href='' onclick="javascript:window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600,hl=vi');return false;")
                  i.fab.fa-google
              li
                a.twi(href='')
                  i.fab.fa-twitter
              li
                a.love(href='' data-post-id='706' data-love='5' data-url='updatelove')
                  i.fa.fa-heart
                span 0
        .box-content
          .song-tools
            .song-tools__group
              button.song-tools__btn#chordDown b
              input.song-tools__input.chord_ipt(value=`Am`)
              button.song-tools__btn#chordUp #
            .song-tools__group
              button.song-tools__btn#fontDown -
              input.song-tools__input.font_ipt(value=`16px`)
              button.song-tools__btn#fontUp +
            .song-tools__group
              label(for="chiacot")
                input.song-tools__checkbox(type="checkbox" id="chiacot" checked)
                .song-tools__text Chia cột
            .song-tools__group
              label(for="gopdong")
                input.song-tools__checkbox(type="checkbox" id="gopdong" checked)
                .song-tools__text Tách dòng
            .song-tools__group
              label(for="anhopam")
                input.song-tools__checkbox(type="checkbox" id="anhopam")
                .song-tools__text Ẩn hợp âm
          .song-more
            .song-more__toggle
              span Thêm thông tin
            .song-more__dropdown
              .song-more__wrap
                .row
                  .col-12.col-lg-4
                    .song-info
                      ul
                        li
                          span.song-info__att Tác giả :
                          span.song-info__ats.song-info--up Đinh Công Huỳnh
                        li
                          span.song-info__att Người đăng :
                          span.song-info__ats Hoàng Minh Ngọc
                        li
                          span.song-info__att Ngày đăng :
                          span.song-info__ats April 26, 2020
                        li
                          span.song-info__att Lượt xem :
                          span.song-info__ats 81
                        li
                          span.song-info__att Tone chính :
                          span.song-info__ats Am
                        li
                          span.song-info__att Điệu bài hát :
                          span.song-info__ats Slow
                        li
                          span.song-info__att Chuyên mục :
                          span.song-info__ats.song-info--up Mùa Thường Niên
                  .col-12.col-lg-4
                    .song-intro.d-none.d-lg-block
                      ul
                        li
                          span.song-intro__att
                            img(src="images/print.png", alt="")
                          span.song-intro__ats.song-intro--up In bài hát
                        li
                          span.song-intro__att
                            img(src="images/right.png", alt="")
                          span.song-intro__ats.song-intro--up Thăng 1/2 note
                        li
                          span.song-intro__att
                            img(src="images/left.png", alt="")
                          span.song-intro__ats.song-intro--up Giáng 1/2 note
                        li
                          span.song-intro__att
                            img(src="images/up.png", alt="")
                          span.song-intro__ats.song-intro--up Tăng 1 font size
                        li
                          span.song-intro__att
                            img(src="images/down.png", alt="")
                          span.song-intro__ats.song-intro--up giảm 1 font size
                  .col-12.col-lg-4
                    .song-pdf
                      .song-pdf__file
                        a(href="http://www.dinh.dk/pdf/kinhlayCha-tmh.pdf" data-src="http://www.dinh.dk/pdf/kinhlayCha-tmh.pdf" data-fancybox target="_blank")
                          img(src="images/pdf.svg", alt="")
                      .song-pdf__note (Click vào hình để xem cũng như tải file sheet nhạc)
                      .song-pdf__note Xin cảm ơn tác giả, cũng là chủ của trang web <a href="http://www.thuvienamnhac.org/" terget="_blank">Thư viện âm nhạc</a>, tác giả <span>Đinh Công Huỳnh</span> Đã cho phép trang web sử dụng file PDF từ trang.
          .row
            .col-12.col-xl-8
              .song-content.song-content__lahubalahu
